-# 
  Эта страница не адаптивна! Так как сделать подобные сраницы адаптивными -
  это отдельное задание! 
=breadcrumb_tag do
  %li.active
    Анкеты
  %li
    Администрирование

.page-header
  %h1= t('headers.forms.index')

%caption
  = link_to new_form_path, class: 'btn btn-success' do
    = fa_icon :plus
    = t('buttons.new.form') 


.row
  - @forms.each do |form|
    .col-md-6
      .well
        %dl
          %dt= Form.human_attribute_name(:user_description)
          %dd= form.user_description
          %dt= Form.human_attribute_name(:hobbies)
          %dd= form.hobbies
          %dt= Form.human_attribute_name(:bad_habits)
          %dd= form.bad_habits
          %dt= Form.human_attribute_name(:type_of_home)
          %dd= form.type_of_home
          %dt= Form.human_attribute_name(:purpose_of_acquaintance)
          %dd= form.purpose_of_acquaintance
          %dt= Form.human_attribute_name(:user)
          %dd= form.user.login
          %dd
            = link_to form, class: 'btn btn-warning' do
              = fa_icon :eye
              = t('buttons.show')
          - if admin?
            = link_to edit_form_path(form), class: 'btn btn-info' do
              = fa_icon :edit
              = t('buttons.edit')
            = link_to form, :method => :delete, 
            :data => { :confirm => t('buttons.confirm.form') }, 
            class: 'btn btn-danger' do
              = fa_icon :times
              = t('buttons.destroy')

