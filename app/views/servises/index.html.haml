=breadcrumb_tag do
  %li.active
    Услуги
  %li
    Администрирование
.page-header
  %h1= t('headers.servises.index')

%caption
  = link_to new_servise_path, class: 'btn btn-success' do
    = fa_icon :plus
    = t('buttons.new.servise')   
.row
  - @servises.each do |servise|
    .col-xs-6
      .well
        %dl
          %dt= Servise.human_attribute_name(:active_serv)
          %dd= servise.active_serv
          %dt= Servise.human_attribute_name(:type_serv)
          %dd= servise.type_serv
          %dt= Servise.human_attribute_name(:price_serv)
          %dd= servise.price_serv
          %dt= Servise.human_attribute_name(:time_of_payment)
          %dd= lnil(servise.time_of_payment)
          %dt= Servise.human_attribute_name(:user)
          %dd= servise.user.login
          %dd
            = link_to servise, class: 'btn btn-warning' do
              = fa_icon :eye
              = t('buttons.show')
            = link_to edit_servise_path(servise), class: 'btn btn-info' do
              = fa_icon :edit
              = t('buttons.edit')
            = link_to servise, :method => :delete, 
            :data => { :confirm => t('buttons.confirm.servise') }, 
            class: 'btn btn-danger' do
              = fa_icon :times
              = t('buttons.destroy')

