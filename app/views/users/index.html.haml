-# 
  Эта страница не адаптивна! Так как сделать подобные сраницы адаптивными -
  это отдельное задание! 
=breadcrumb_tag do
  %li.active
    Пользователи
  %li
    Администрирование

.page-header
  %h1= t('headers.users.index')


- if admin?
  %caption
    = link_to new_user_path, class: 'btn btn-success' do
      = fa_icon :plus
      = t('buttons.new.user')      


  .row
    - @users.each do |user|
      .col-md-6
        .well
          %dl
            %dt= User.human_attribute_name(:email)
            %dd= user.email
            %dt= User.human_attribute_name(:birthday)
            %dd= lnil(user.birthday)
            %dt= User.human_attribute_name(:name)
            %dd= user.name
            %dt= User.human_attribute_name(:sex)
            %dd= user.sex
            %dt= User.human_attribute_name(:birthday)
            %dd= user.birthday
            %dt= User.human_attribute_name(:country)
            %dd= user.country
            %dt= User.human_attribute_name(:city)
            %dd= user.city
            %dd
            %br
              = link_to user, class: 'btn btn-warning' do
                = fa_icon :eye
                = t('buttons.show')
              - if admin?
                = link_to edit_user_path(user), class: 'btn btn-info' do
                  = fa_icon :edit
                  = t('buttons.edit')
              = link_to user, :method => :delete, 
              :data => { :confirm => t('buttons.confirm.user') }, 
              class: 'btn btn-danger' do
                = fa_icon :times
                = t('buttons.destroy')
- else
  Недостаточно прав для доступа
