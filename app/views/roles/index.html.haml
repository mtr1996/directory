=breadcrumb_tag do
  %li.active
    Роли
  %li
    Администрирование

.page-header
  %h1= t('headers.roles.index')

- if admin?
  %caption
    = link_to new_role_path, class: 'btn btn-success' do
      = fa_icon :plus
      = t('buttons.new.role')
  .row
    - @roles.each do |role|
      .col-xs-6
        .well
          %dl
            %dt= Role.human_attribute_name(:name)
            %dd= role.name
            %dt= Role.human_attribute_name(:info)
            %dd= role.info
            %dt= Role.human_attribute_name(:full_info)
            %dd= role.full_info
            %dd
            = link_to role, class: 'btn btn-warning' do
              = fa_icon :eye
              = t('buttons.show')
            = link_to edit_role_path(role), class: 'btn btn-info' do
              = fa_icon :edit
              = t('buttons.edit')
            = link_to role, :method => :delete, 
              :data => { :confirm => t('buttons.confirm.role') }, 
              class: 'btn btn-danger' do
              = fa_icon :times
              = t('buttons.destroy')
- else
  Недостаточно прав для доступа
